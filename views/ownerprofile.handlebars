<section class="card">
    <header>
        <h2>{{owner.firstName}} {{owner.lastName}}</h2>
    </header>

    <p>{{owner.age}}</p>
    <p>{{owner.phoneNumber}}</p>
    <p>{{owner.homeAddress}}</p>
    <ul>Pets:
    {{#each owner.pets}}
    <li>{{this.firstName}}</li>
    {{/each}}
    </ul>
    <p id="owner-id" class="hidden">{{owner.id}}</p>
    </section>



