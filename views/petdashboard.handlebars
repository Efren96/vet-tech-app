{{#each pets as |pet| }}
{{> petcard pet}}
{{/each}}

<div>
        <button id="create-pet-button" type="button" class="p-2">Create Pet Profile</button>
</div>

<div class="add-pet-user-container">
        <form id="add-pet-form">
                <h3>Add new pet here:</h3>

                <label for='pet_firstname'>First Name:</label>
                <textarea id='firstName' name='firstName' rows='2' cols='30'>{{firstName}}</textarea>
                <br />
                <label for='pet_lastname'>Last Name:</label>
                <textarea id='lastName' name='lastName' rows='2' cols='30'>{{lastName}}</textarea>
                <br />
                <label for='age'>Age:</label>
                <textarea id='age' name='age' rows='2' cols='30'>{{age}}</textarea>
                <br />
                <label for='species'>Species:</label>
                <textarea id='species' name='species' rows='2' cols='30'>{{species}}</textarea>
                <br />
                <label for='weight'>Weight:</label>
                <textarea id='weight' name='weight' rows='2' cols='30'>{{weight}}</textarea>
                <br />
                <input type='checkbox' id='neutered' name='neutered'/>
                <label for='neutered'>Check box if pet is neutered.</label>
                <br />
                <input type='checkbox' id='vaccination' name='vaccination'/>
                <label for='vaccination'>Check box if pet needs vaccinations.</label>
                <br />
                <label for='pet_ownerid'>Owner ID:</label>
                <textarea id='pet_ownerid' name='pet_ownerid' rows='2' cols='30'>{{owner_id}}</textarea>
                <br />
                <button type='submit' value='Submit' class="p-2">Submit</button>
        </form>

</div>


<script src="/js/petdashboard.js"></script>